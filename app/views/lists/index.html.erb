<div class="home-navbar">
  <%= link_to "+ New list", new_list_path, class:"button-list", "data-controller":"turbo" %>
</div>
<%= render "banner" %>
<div class="lists">
    <% @lists.each do |list| %>
        <%= link_to list do %>
          <%= render list %>
        <% end %>
      <% end %>
</div>

<div class="container" data-controller = "search">
  <%= form_with url: movies_path, method: :get, class: "d-flex", data: {
    search_target: "form",
    action: "submit->search#load"
    } do %>
  <%= text_field_tag :query,
  params[:query],
  class: "form-control",
  placeholder: "Find a movie"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
</div>


